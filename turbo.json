{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "STRICT_MODE",
    
    "NEXT_PUBLIC_GRAPHQL_ENDPOINT",
    "COOKIE_SECRET",

    "DATABASE_URL",
    "SEED_COUNT",

    "ADMIN_USER_EMAIL",
    "ADMIN_USER_PASSWORD",
    "POSITIONSTACK_API_ACCESS_KEY"
  ],
  "pipeline": {
    "package": {
      "dependsOn": [
        "^package"
      ],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "dev:local": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    }
  }
}
