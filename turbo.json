{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "DEPLOYMENT_TARGET",
    "NODE_ENV",
    "NEXT_PUBLIC_STRICT_MODE",
    
    "NEXT_PUBLIC_GRAPHQL_ENDPOINT",
    "COOKIE_SECRET",

    "DATABASE_URL",
    "SEED_COUNT",

    "ADMIN_USER_EMAIL",
    "ADMIN_USER_PASSWORD",
    "POSITIONSTACK_API_ACCESS_KEY"
  ],
  "pipeline": {
    "package": {
      "dependsOn": [
        "^package"
      ],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": [
        "^build",
        "package"
      ],
      "outputs": ["dist/**", ".next/**", ".keystone/admin/.next/**"]
    },
    "build:staging": {
      "dependsOn": [
        "^build",
        "package"
      ],
      "outputs": ["dist/**", ".next/**", ".keystone/admin/.next/**"]
    },
    "migrate:deploy": {
      "dependsOn": [
        "^build",
        "package",
        "^migrate:deploy"
      ],
      "outputs": ["prisma/migrations/**"]
    },
    "start:staging": {
      "dependsOn": [
        "^build",
        "package",
        "migrate:deploy",
        "^start:staging"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "dev:local": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    }
  }
}
