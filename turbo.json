{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "NEXT_PUBLIC_DEPLOYMENT_TARGET",
    "NEXT_PUBLIC_HCAPTCHA_SITE_KEY",
    "NODE_ENV",
    "NEXT_PUBLIC_STRICT_MODE",
    "NEXT_PUBLIC_ETC_HOSTS",
    
    "NEXT_PUBLIC_GRAPHQL_ENDPOINT",
    "NEXT_PUBLIC_CORS_ORIGIN",
    "COOKIE_SECRET",

    "DATABASE_URL",
    "SEED_COUNT",
    "CI",

    "ADMIN_USER_EMAIL",
    "ADMIN_USER_PASSWORD",

    "POSITIONSTACK_API_ACCESS_KEY",
    "HCAPTCHA_SECRET"
  ],
  "pipeline": {
    "package": {
      "dependsOn": [
        "^package"
      ],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": [
        "^package",
        "^build"
      ],
      "outputs": ["dist/**", ".next/**", ".keystone/admin/.next/**"]
    },
    "build:staging": {
      "dependsOn": [
        "^package",
        "^build"
      ],
      "outputs": ["dist/**", ".next/**", ".keystone/admin/.next/**"]
    },
    "build:prod": {
      "dependsOn": [
        "^package",
        "^build:prod"
      ],
      "outputs": ["dist/**", ".next/**", ".keystone/admin/.next/**"]
    },
    "migrate:staging": {
      "dependsOn": [
        "^package",
        "^build",
        "^migrate:staging"
      ],
      "outputs": ["prisma/migrations/**"]
    },
    "migrate:prod": {
      "dependsOn": [
        "^package",
        "^build",
        "^migrate:prod"
      ],
      "outputs": ["prisma/migrations/**"]
    },
    "start:staging": {
      "dependsOn": [
        "^package",
        "^build",
        "^migrate:staging",
        "^start:staging"
      ]
    },
    "start:prod": {
      "dependsOn": [
        "^package",
        "^build",
        "^migrate:prod",
        "^start:prod"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "dev:local": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "dev:ci": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    }
  }
}
